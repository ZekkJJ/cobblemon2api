# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================

# Puerto del servidor backend
PORT=4000

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# ============================================
# BASE DE DATOS MONGODB
# ============================================

# URI de conexión a MongoDB Atlas
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Nombre de la base de datos
MONGODB_DB=cobblemon_pitufos

# ============================================
# DISCORD OAUTH
# ============================================

# ID de la aplicación de Discord
DISCORD_CLIENT_ID=tu_client_id_aqui

# Secret de la aplicación de Discord
DISCORD_CLIENT_SECRET=tu_client_secret_aqui

# URL de redirección después del login
DISCORD_REDIRECT_URI=http://localhost:4000/api/auth/discord/callback

# ============================================
# JWT (JSON WEB TOKENS)
# ============================================

# Secret para firmar tokens JWT (mínimo 32 caracteres)
JWT_SECRET=tu_jwt_secret_super_seguro_de_al_menos_32_caracteres

# Tiempo de expiración de tokens (7d = 7 días)
JWT_EXPIRES_IN=7d

# ============================================
# FRONTEND
# ============================================

# URL del frontend para CORS
FRONTEND_URL=http://localhost:3000

# ============================================
# DISCORD WEBHOOK (OPCIONAL)
# ============================================

# URL del webhook de Discord para notificaciones
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ============================================
# GROQ API (OPCIONAL - PARA SOUL DRIVEN)
# ============================================

# API Key de Groq para el modo Soul Driven
# GROQ_API_KEY=tu_groq_api_key_aqui

# ============================================
# SEGURIDAD
# ============================================

# IPs autorizadas para endpoints del plugin (separadas por comas)
# Incluye localhost por defecto
AUTHORIZED_IPS=127.0.0.1,::1,tu_ip_del_servidor_minecraft

# ============================================
# RATE LIMITING
# ============================================

# Ventana de tiempo para rate limiting (en milisegundos)
RATE_LIMIT_WINDOW_MS=60000

# Máximo de requests por ventana para endpoints públicos
RATE_LIMIT_MAX_REQUESTS=100

# Máximo de requests por ventana para endpoints de sincronización
SYNC_RATE_LIMIT_MAX=60

# ============================================
# SERVIDOR DE MINECRAFT (OPCIONAL)
# ============================================

# IP del servidor de Minecraft para verificar estado
# MINECRAFT_SERVER_IP=tu_servidor.minecraft.net

# Puerto del servidor de Minecraft
# MINECRAFT_SERVER_PORT=25565
